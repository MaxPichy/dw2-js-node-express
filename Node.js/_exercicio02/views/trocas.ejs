<%- include('partials/header.ejs'); %>
<%- include('partials/navbar.ejs'); %>

<div class="container">
    <div class="card">
    <div class="card-header">
        <h1>Intrusos</h1>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Intruso</th>
                    <th>Livro</th>
                    <th>Item Trocado</th>
                </tr>
            </thead>
            <tbody>
                <% Troca.forEach(troca => { %>
                <tr>
                    <td>
                        <%= troca.intruso %>
                    </td>
                    <td>
                        <%= troca.livro %>
                    </td>
                    <td>
                        <%= troca.item %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer.ejs'); %>