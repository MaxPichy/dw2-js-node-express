<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Cadastrar Pedido</h1>
            </div>
            <div class="card-body">
                <form action="/pedidos/update" method="post">
                    <input type="hidden" name="id" value="<%= pedido.id %>">

                    <label>Nome do pedido</label>
                    <input type="text" class="form-control" name="numero" placeholder="Insira o numero do pedido" 
                    value="<%= pedido.numero %>" required>

                    <label>Valor do pedido</label>
                    <input type="text" class="form-control mb-4" name="valor" placeholder="Insira o valor do pedido" 
                    value="<%= pedido.valor %>" required>

                    <input type="submit" onclick="return confirm(`Confirma as alterações realizadas para o pedido <%= pedido.numero %>?`)"
                    class="btn btn-warning" value="Editar">

                    <a href="/pedidos">
                        <input type="button" class="btn btn-danger" value="Cancelar">
                    </a>
                </form>
            </div>
        </div>
    </div>
    
    <%- include ('partials/footer.ejs') %>